---
import Layout from "~/layouts/PageLayout.astro";
import { Picture } from "@astrojs/image/components";
import Cta from "~/components/Cta.astro";
import Icon from "astro-icon";
import AchievementCarousel from "../components/AchievementCarousel";

const team_members = [
  {
    name: "Eman Ćatić",
    description: `Skilled security engineer with 4+ years of experience in penetration testing, bug bounties and CTF competitions.`,
    img_url: "/images/about/profile1.png",
    linked_in_url: "https://www.linkedin.com/in/eman-catic/",
  },
  {
    name: "Almir Dautbegović",
    description: `Passionate tech salesman, skilled copywriter crafting clear text to help non-tech folks grasp security issues.`,
    img_url: "/images/about/profile2.png",
    linked_in_url: "https://www.linkedin.com/in/almir-starship-shield/",
  },
  {
    name: "Rijad Gadžo",
    description: `Experienced DevSecOps engineer with a background in penetration testing in numerous companies around the world.`,
    img_url: "/images/about/profilee3.png",
    linked_in_url: "https://www.linkedin.com/in/gadzo-rijad/",
  },
];
const last_memeber = [
  {
    name: "Džemal Dzananović",
    description: `Skilled mobile security engineer that will help you integrate the best security solutions to your application codebase.`,
    img_url: "/images/about/profile4.png",
    linked_in_url: "https://www.linkedin.com/in/secure-startups/",
  },
];
const key_features = [
  {
    img_url: "/images/about/benefits/1.svg",
    title: "Retesting Included",
    paragraph: `We offer free retesting for patched vulnerabilities, ensuring your system's security`,
  },
  {
    img_url: "/images/about/benefits/2.svg",
    title: "Time Efficient",
    paragraph: `We strive to deliver quality services 3x faster, no matter the size of your projects. `,
  },
  {
    img_url: "/images/about/benefits/3.svg",
    title: "Included Bonuses",
    paragraph: `We always include bonuses free of charge alongside our basic services for our clients.`,
  },
];
---

<Layout>
  <title>About Us | Starship Shield</title>
  <meta
    name="description"
    content="Young and driven allies on the lookout for new ways of defending against hackers. Learn about Starship Shield's mission and meet the team."
  />
  <article>
    <section class="w-full max-w-5xl md:text-center px-4 pt-8 mx-auto mb-24">
      <header>
        <h1 class="h1 text-black my-6">About Us</h1>
      </header>
      <section class="w-full paper rounded-md py-8 px-4">
        <section class="text-left p2 md:text-center">
          <p class="p1">
            <span class="text-primary">Young</span> and <span
              class="text-primary">driven</span
            > allies on the lookout for new ways of defending against hackers. Learn
            about Starship Shield's mission and meet the team.
          </p>
        </section>
      </section>
    </section>
    <section class="w-full max-w-5xl px-4 mx-auto mb-12">
      <h1 class="h2 md:text-center mb-4">Meet Our Team</h1>

      <section
        class="w-full py-8 grid grid-cols-1 md:grid-cols-3 gap-x-4 gap-y-8"
      >
        {
          team_members.map((item, idx: any) => (
            <section class="flex flex-col gap-y-4 md:text-center">
              <Picture
                class="h-40 w-40 mx-auto rounded-full"
                src={item.img_url}
                widths={[1600, 800]}
                sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 432px"
                aspectRatio="3:3"
                alt="Profile pictures of Starship Shield members"
              />

              <h1 class="h3" set:text={item.name} />
              <p
                class="p2 w-5/ md:w-full mx-auto"
                set:text={item.description}
              />
              <a href={item.linked_in_url} class="flex gap-x-4 md:mx-auto">
                <Icon
                  pack="cib"
                  name="linkedin"
                  class="w-6 h-6 inline-block text-primary"
                />
              </a>
            </section>
          ))
        }
      </section>
      <section class="w-full pt-8">
        {
          last_memeber.map((item, idx: any) => (
            <section class="flex flex-col gap-y-4 md:w-60 md:mx-auto md:text-center">
              <Picture
                class="h-40 w-40 mx-auto rounded-full"
                src={item.img_url}
                widths={[1600, 800]}
                sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 432px"
                aspectRatio="3:3"
                alt="Profile pictures of Starship Shield members"
              />

              <h1 class="h3" set:text={item.name} />
              <p class="p2  md:w-full mx-auto" set:text={item.description} />
              <a href={item.linked_in_url} class="flex gap-x-4 md:mx-auto">
                <Icon
                  pack="cib"
                  name="linkedin"
                  class="w-6 h-6 inline-block text-primary"
                />
              </a>
            </section>
          ))
        }
      </section>
    </section>
    <section class="w-full max-w-5xl px-4 py-8 mx-auto mb-24">
      <section class="h2 w-full mb-4 md:text-center mx-auto">
        Competitions We've Won
      </section>
      <AchievementCarousel client:load />
    </section>
    <section class="w-full max-w-5xl px-4 mx-auto mb-24">
      <h1 class="h2 mb-8 md:text-center">Why Choose Us?</h1>

      <section class="grid grid-cos-1 md:grid-cols-3 gap-8">
        {
          key_features.map(({ img_url, title, paragraph }, idx: number) => (
            <section class="flex flex-col gap-y-4 md:text-center" key={idx}>
              <Picture
                class="h-40 w-40 mx-auto select-none"
                src={img_url}
                widths={[1600, 800]}
                sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 432px"
                aspectRatio="3:3"
                alt="Picture of competition - Starship Shield"
              />
              <h1 class="h3" set:text={title} />
              <p class="p2 w-5/ md:w-full mx-auto" set:text={paragraph} />
            </section>
          ))
        }
      </section>
    </section>
  </article>
  <Cta />
</Layout>
