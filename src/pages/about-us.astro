---
import Layout from "~/layouts/PageLayout.astro";
import { Picture } from "@astrojs/image/components";
import Cta from "~/components/Cta.astro";
import Icon from "astro-icon";
import AchievementCarousel from "../components/AchievementCarousel";

const team_members = [
  {
    name: "Eman Ćatić",
    description: `Skilled security engineer with 4+ years of experience in penetration testing, bug bounties and CTF competitions.`,
    img_url: "/images/about/profile1.png",
    linked_in_url: "https://www.linkedin.com/in/eman-catic/",
  },
  {
    name: "Almir Dautbegović",
    description: `Passionate tech salesman, skilled copywriter crafting clear text to help non-tech folks grasp security issues.`,
    img_url: "/images/about/profile2.png",
    linked_in_url: "https://www.linkedin.com/in/almir-starship-shield/",
  },
  {
    name: "Rijad Gadžo",
    description: `Experienced DevSecOps engineer with a background in penetration testing in numerous companies around the world.`,
    img_url: "/images/about/profilee3.png",
    linked_in_url: "https://www.linkedin.com/in/gadzo-rijad/",
  },
];
const last_memeber = [
  {
    name: "Džemal Dzananović",
    description: `Skilled mobile security engineer that will help you integrate the best security solutions to your application codebase.`,
    img_url: "/images/about/profile4.png",
    linked_in_url: "https://www.linkedin.com/in/secure-startups/",
  },
];
const key_features = [
  {
    img_url: "/images/about/benefits/1.svg",
    title: "Retesting Included",
    paragraph: `We offer free retesting for patched vulnerabilities, ensuring your system's security`,
  },
  {
    img_url: "/images/about/benefits/2.svg",
    title: "Time Efficient",
    paragraph: `We strive to deliver quality services 3x faster, no matter the size of your projects. `,
  },
  {
    img_url: "/images/about/benefits/3.svg",
    title: "Included Bonuses",
    paragraph: `We always include bonuses free of charge alongside our basic services for our clients.`,
  },
];
---

<Layout>
  <title>About Us | Starship Shield - Defenders Against Hackers</title>
  <meta name="description" content="Learn about Starship Shield's mission, meet the team, and discover why we're changing the security game. Defenders against hackers with a young and driven team.">
  <meta name="keywords" content="Starship Shield, cybersecurity, team, mission, security game, hackers, defenders, about us">
  <meta name="robots" content="index, follow">

  <link rel="canonical" href="https://www.starshipshield.com/about-us">

  <link rel="icon" href="/favicon.ico">

  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "Organization",
      "name": "Starship Shield",
      "url": "https://www.starshipshield.com",
      "logo": "https://www.starshipshield.com/images/mainlogo.svg",
      "description": "Defenders against hackers with a young and driven team",
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+387603571117",
        "contactType": "customer support"
      }
    }
  </script>
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "Person",
      "name": "Eman Ćatić",
      "jobTitle": "Penetration Tester",
      "url": "https://www.linkedin.com/in/eman-catic/",
      "image": "https://www.starshipshield.com/images/about/profile1.png",
      "description": "Skilled security engineer with 4+ years of experience in penetration testing, bug bounties, and CTF competitions."
    },
    {
      "@context": "http://schema.org",
      "@type": "Person",
      "name": "Almir Dautbegović",
      "jobTitle": "Tech Salesman",
      "url": "https://www.linkedin.com/in/almir-starship-shield/",
      "image": "https://www.starshipshield.com/images/about/profile2.png",
      "description": "Passionate tech salesman, skilled copywriter crafting clear text to help non-tech folks grasp security issues."
    },
    {
      "@context": "http://schema.org",
      "@type": "Person",
      "name": "Rijad Gadžo",
      "jobTitle": "Penetration Tester",
      "url": "https://www.linkedin.com/in/gadzo-rijad/",
      "image": "https://www.starshipshield.com/images/about/profilee3.png",
      "description": "Experienced DevSecOps engineer with a background in penetration testing in numerous companies around the world."
    },
    {
      "@context": "http://schema.org",
      "@type": "Person",
      "name": "Džemal Džananović",
      "jobTitle": "Founder & Mobile Security Engineer",
      "url": "https://www.linkedin.com/in/secure-startups/",
      "image": "https://www.starshipshield.com/images/about/profile4.png",
      "description": "Skilled mobile security engineer that will help you integrate the best security solutions to your application codebase."
    }
  </script>

  <article>
    <section class="w-full max-w-5xl text-center px-4 pt-8 mx-auto mb-24">
      <header>
        <h1 class="h1 text-black my-6">About Us</h1>
      </header>
      <section
        class="w-full paper rounded-md py-8 px-4 grid grid-cols-1 md:grid-cols-2"
      >
        <section
          class="w-full flex items-center pb-4 md:pb-0 border-b-2 md:border-b-0 md:border-r-2 border-main"
        >
          <h1 class="p1 mx-auto md:text-left">
            You guessed it. <br /> We’re changing the security game.
          </h1>
        </section>
        <section class="text-left p2 md:text-center md:pl-4">
          <p class="p1">
            Young and driven allies on the lookout for new ways of defending
            against hackers. Learn about Starship Shield's mission and meet the
            team.
          </p>
        </section>
      </section>
    </section>
    <section class="w-full max-w-5xl px-4 mx-auto mb-12">
      <h1 class="h2 text-center mb-4">Meet Our Team</h1>

      <section
        class="w-full p-8 grid grid-cols-1 md:grid-cols-3 gap-x-4 gap-y-8"
      >
        {
          team_members.map((item, idx: any) => (
            <section class="flex flex-col gap-y-4 text-center">
              <Picture
                class="h-40 w-40 mx-auto rounded-full"
                src={item.img_url}
                widths={[1600, 800]}
                sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 432px"
                aspectRatio="3:3"
                alt="Profile pictures of Starship Shield members"
              />

              <h1 class="h3" set:text={item.name} />
              <p
                class="p2 w-2/3 md:w-full mx-auto"
                set:text={item.description}
              />
              <a href={item.linked_in_url} class="flex gap-x-4 mx-auto">
                <Icon
                  pack="cib"
                  name="linkedin"
                  class="w-6 h-6 inline-block text-primary"
                />
              </a>
            </section>
          ))
        }
      </section>
      <section class="w-full pt-8">
        {
          last_memeber.map((item, idx: any) => (
            <section class="flex flex-col gap-y-4 text-center w-60 mx-auto">
              <Picture
                class="h-40 w-40 mx-auto rounded-full"
                src={item.img_url}
                widths={[1600, 800]}
                sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 432px"
                aspectRatio="3:3"
                alt="Picture from competition Starship Shield team won"
              />

              <h1 class="h3" set:text={item.name} />
              <p class="p2" set:text={item.description} />
              <a href={item.linked_in_url} class="flex gap-x-4 mx-auto">
                <Icon
                  pack="cib"
                  name="linkedin"
                  class="w-6 h-6 inline-block text-primary"
                />
              </a>
            </section>
          ))
        }
      </section>
    </section>
    <section class="w-full max-w-5xl px-4 py-8 mx-auto mb-24">
      <section class="h2 w-full mb-4 text-center mx-auto">
        Competitions We've Won
      </section>
      <AchievementCarousel client:load />
    </section>
    <section class="w-full max-w-5xl px-4 mx-auto mb-24">
      <h1 class="h2 mb-8 text-center">Why Choose Us?</h1>

      <section class="grid grid-cos-1 md:grid-cols-3 gap-8">
        {
          key_features.map(({ img_url, title, paragraph }, idx: number) => (
            <section class="flex flex-col gap-y-4 text-center" key={idx}>
              <Picture
                class="h-40 w-40 mx-auto select-none"
                src={img_url}
                widths={[1600, 800]}
                sizes="(max-width: 600px) 100vw, (max-width: 900px) 50vw, 432px"
                aspectRatio="3:3"
                alt="Picture of competition - Starship Shield"
              />
              <h1 class="h3" set:text={title} />
              <p class="p2 w-2/3 md:w-full mx-auto" set:text={paragraph} />
            </section>
          ))
        }
      </section>
    </section>
  </article>
  <Cta />
</Layout>
